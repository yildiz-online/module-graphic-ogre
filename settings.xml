<settings>
  <servers>
    <server>
      <id>ossrh</id>
      <username>${env.OSSRH_USER_TOKEN}</username>
      <password>${env.OSSRH_PWD_TOKEN}</password>
    </server>
  </servers>
  <profiles>
    <profile>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <gpg.keyname>${env.GPG_KEY}</gpg.keyname>
        <gpg.passphrase>${env.GPG_PWD}</gpg.passphrase>
        <sonar.host.url>https://sonarqube.com</sonar.host.url>
        <sonar.login>${env.SONAR}</sonar.login>
        <sonar.cfamily.build-wrapper-output>target/sonar-cpp</sonar.cfamily.build-wrapper-output>
        <sonar.verbose>true</sonar.verbose>
      </properties>
      <repositories>
        <repository>
          <id>ossrh</id>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
          <url>https://oss.sonatype.org/content/repositories/snapshots</url>
        </repository>
        <repository>
          <id>maven-eclipse-repo</id>
          <url>http://maven-eclipse.github.io/maven</url>
        </repository>
      </repositories>
    </profile>
  </profiles>
</settings>