<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <name>Yildiz Module Graphic Ogre</name>
  <description>Ogre implementation for the graphic module.</description>

  <groupId>be.yildiz-games</groupId>
  <artifactId>module-graphic-ogre</artifactId>
  <version>1.0.0-0-SNAPSHOT</version>

  <packaging>jar</packaging>
  <inceptionYear>2014</inceptionYear>
  <parent>
    <groupId>be.yildiz-games</groupId>
    <artifactId>parent</artifactId>
    <version>1.0.0-0-SNAPSHOT</version>
  </parent>

  <properties>
    <version.bom-junit>1.0.0-0-SNAPSHOT</version.bom-junit>
    <version.module-graphic>1.0.0-0-SNAPSHOT</version.module-graphic>
    <version.module-swt>1.0.0-0-SNAPSHOT</version.module-swt>
    <nativeEnv>none</nativeEnv>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>be.yildiz-games</groupId>
        <artifactId>bom-junit</artifactId>
        <version>${version.bom-junit}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <dependencies>
    <dependency>
      <groupId>be.yildiz-games</groupId>
      <artifactId>module-graphic</artifactId>
      <version>${version.module-graphic}</version>
    </dependency>
    <dependency>
      <groupId>be.yildiz-games</groupId>
      <artifactId>module-window-swt</artifactId>
      <version>${version.module-swt}</version>
      <classifier>${nativeEnv}</classifier>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-all</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>1.10</version>
        <executions>
          <execution>
            <id>add-source</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>src/main/c++</source>
                <source>src/main/includes</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>linux64</id>
      <activation>
        <property>
          <name>env</name>
          <value>linux64</value>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-jar-plugin</artifactId>
            <configuration>
              <classifier>linux64</classifier>
            </configuration>
          </plugin>
        </plugins>
      </build>
      <properties>
        <nativeEnv>linux64</nativeEnv>
      </properties>
    </profile>
    <profile>
      <id>win64</id>
      <activation>
        <property>
          <name>env</name>
          <value>win64</value>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-jar-plugin</artifactId>
            <configuration>
              <classifier>win64</classifier>
            </configuration>
          </plugin>
        </plugins>
      </build>
      <properties>
        <nativeEnv>win64</nativeEnv>
      </properties>

    </profile>
    <profile>
      <id>native</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>exec-maven-plugin</artifactId>
            <groupId>org.codehaus.mojo</groupId>
            <executions>
              <execution>
                <id>Build PhysFS library for ${nativeEnv}</id>
                <phase>compile</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>${basedir}/src/main/scripts/${nativeEnv}/build_physfs.sh</executable>
                </configuration>
              </execution>
              <execution>
                <id>Build Ogre3D dependencies library for ${nativeEnv}</id>
                <phase>compile</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>${basedir}/src/main/scripts/${nativeEnv}/build_ogre3d-deps.sh
                  </executable>
                </configuration>
              </execution>
              <execution>
                <id>Build Ogre3D library for ${nativeEnv}</id>
                <phase>compile</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>${basedir}/src/main/scripts/${nativeEnv}/build_ogre3d.sh</executable>
                </configuration>
              </execution>
              <execution>
                <id>Build Yildiz-Ogre3D binding library for ${nativeEnv}</id>
                <phase>compile</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>${basedir}/src/main/scripts/${nativeEnv}/build_yildiz-ogre3d.sh
                  </executable>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <repositories>
    <repository>
      <id>ossrh</id>
      <name>OSS repository snapshot</name>
      <url>https://oss.sonatype.org/content/repositories/snapshots</url>
    </repository>
  </repositories>
</project>
